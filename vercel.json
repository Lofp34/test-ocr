{
  "version": 2,
  "functions": {
    "api/ocr.js": {
      "maxDuration": 30
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/ocr",
      "dest": "/api/ocr"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}